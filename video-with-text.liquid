        <h4>{{ section.settings.video-text1 }}</h4>
        <h4>{{ section.settings.video-text2 }}</h4>
        <h4>{{ section.settings.video-text3 }}</h4>
    </div>
</div>

<div class="pro-hero__bottom">
    <a class="pro-hero__section-link" href="https://www.gkhair.com/account/login">
      <div class="pro-hero__bottom-left">
        <p>Already have an account? <span>Sign In</span></p>
      </div>
    </a>

    <a class="pro-hero__section-link" href="#action">
      <div class="pro-hero__bottom-right">
        <p>Want to Join? <span>Sign Up</span></p>
      </div>
    </a>
  </div>
